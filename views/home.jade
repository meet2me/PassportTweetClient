html
  head
    | <style type="text/css">
    include ../public/stylesheets/style.css
    | </style>
    | <style type="text/css">
    include ../public/bootstrap/css/bootstrap.min.css
    | </style>
    | <style type="text/css">
    include ../public/bootstrap/css/bootstrap-responsive.min.css
    | </style>

    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js')

    title #{title}
  body
    h2(align='center')
      u Timeline Stats
      table#heading(align= 'center').table-striped
        h5
          a(href= '/logout', style='float: right,padding-right=10px;') Logout
        tr
          td(rowspan='2', border='1')
            img(src = '#{user.photos[0].value}')
          td
            | Name: #{user.displayName}
        tr
          td
            | Screen Name: #{user.username}

    h4(align='center')
      br
      a(href='#{user._json.url}') Click to visit Website
      br
      | Total Tweets: #{user._json.statuses_count}
      br
      |  Last Tweet At: #{user._json.status.created_at}
      br
      | Followers Count: #{user._json.followers_count}
      br
      | Friends Count: #{user._json.friends_count}